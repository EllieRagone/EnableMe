<%= form_form(@user) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <%= f.label :steam_username, "Steam User Name" %>
  <%= f.text_field :steam_username %>

  <%= f.label :email %>
  <%= f.text_field :email %>

  <%= f.label :password, "A password that is NOT your Steam password" %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation, "Confirm Password" %>
  <%= f.password_field :password_confirmation %>
<% end %>