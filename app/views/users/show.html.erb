<% provide(:title, @user.steam_name) %>
<div class="row-fluid">
  <div class="heading_top">
    <div class="heading_bottom">
      <img src=<%= @user.avatar_medium %>><h1><%= @user.steam_name %></h1>
    </div>
  </div>
</div>
<div class="row-fluid border_bottom">
  <h2>Rates Games you've played</h2>
</div>
<div class="row-fluid border_bottom side_scrolling scrollWrapper">
  <div class="scrollableArea">
    <div class="row-fluid side-scrolling">
      <% @user.steam_games.each do |key, game_hash | %>
        <% if game_hash['hoursOnRecord'].to_i > 1 %>
          <a href=<%= game_hash['storeLink'] %> title="<%= game_hash['name'] %>">
            <img src=<%= game_hash['logo'] %>></a>
        <% end %>
      <% end %>
    </div>
    <div class="row-fluid side-scrolling">
      <% @user.steam_games.each do |key, game_hash | %>
        <% if game_hash['hoursOnRecord'].to_i > 1 %>
          <span class="rating">
            <input name="star<%= key %>" type="radio" class="star" title="1"/>
            <input name="star<%= key %>" type="radio" class="star" title="2"/>
            <input name="star<%= key %>" type="radio" class="star" title="3"/>
            <input name="star<%= key %>" type="radio" class="star" title="4"/>
            <input name="star<%= key %>" type="radio" class="star" title="5"/>
            <input name="star<%= key %>" type="radio" class="star" title="6"/>
            <input name="star<%= key %>" type="radio" class="star" title="7"/>
          </span>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

<div class="row-fluid">
  <div class="span6">
    <h2>Our Recommendations</h2>
    <h4>Top Rated</h4>
    <p>placeholder</p>
    <h4>Indie Games</h4>
    <p>placeholder</p>
    <h4>On Sale</h4>
    <p>placeholder</p>
  </div>
  <div class="span5 offset1">
    <h2>Stats on your Steam Games Library</h2>
    <p>placeholder</p>
  </div>
</div>



<script type="text/javascript">
  $(document).ready(function() {
    $(".scrollableArea").smoothDivScroll({
      visibleHotSpotBackgrounds: "always",
      hotSpotScrollingInterval: 14
    });
  });
</script>