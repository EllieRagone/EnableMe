<% provide(:title, "All users") %>
<h1>All users</h1>

<%= will_paginate %>

<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= link_to user.steam_name, user %>
      <% if current_user.admin? && !current_user?(user) %>
        | <%= link_to "delete", user, method: :delete, 
                                      data: { confirm: "Delete this user: #{user.steam_name}?" } %>
      <% end %>
    </li>
  <% end %>
</ul>

<%= will_paginate %>
